#使用迴圈進入到目標頁面中的每個主題頁面

import os
import requests 
from bs4 import BeautifulSoup
from urllib.request import urlretrieve
import re

for article in soup.select(r'.nrec span'):
    if article.text == '爆':
        article.text == '101'
        print(article.text)
    elif article.text != 'X2' and article.text != 'X1' and int(article.text) > 10:
        print(article.text)
    
